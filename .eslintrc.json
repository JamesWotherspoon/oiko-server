{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "google",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "max-len": [
      "error",
      120,
      2,
      {
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true
      }
    ],
    "new-cap": "off",
    "object-curly-spacing": ["error", "always"],
    "require-jsdoc": "off",
    "indent": [
      "error",
      2,
      {
        "CallExpression": {
          "arguments": 1
        }
      }
    ]
  }
}
